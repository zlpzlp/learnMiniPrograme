/* pages/movies/movie.wxss */
@import "../templates/template.wxss";
.swiperContainer image{
  width: 100%;
  height: 100%;
}
page{
  background: #eee;
}
.coming-soon,
.top250{
  background: #fff;
  margin-top: 20rpx;
}
.movie-title{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  font-size: 12px;
  padding: 15rpx 30rpx;
  color: #aaa;
}
.movie-title .title{
  font-weight: bold;
  font-size: 14px;
  color: #000;
}
.movie-search{
  padding: 0 20rpx;
  margin-top: 20rpx;
}
.movie-search input{
  background: #fff;
  border-radius: 50rpx;
  font-size: 12px;
  padding-left: 20rpx;
}
.searchEmpty{
  font-size: 14px;
  text-align: center;
  margin-top: 50rpx;
}