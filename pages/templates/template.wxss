/* 新闻列表 */
.newslists .newslist{
  background: #fff;
  margin: 10px;
  box-sizing: border-box;
  padding: 10px;
}
.newslists .newslist .writer{
  font-size: 12px;
}
.newslists .newslist .date{
  font-size: 10px;
  color: #ccc;
  margin-left: 5px;
}
.newslists .newslist .title{
  font-size: 14px;
  font-weight: bold;
}
.newslists .newslist .brief{
  font-size: 12px;
}
.newslists .newslist image{
  width: 100%;
  height: 150px;
}
/* 星星评分 */
.movie-rating{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.movie-rating .movie-star{
  width: 30rpx;
  height: 30rpx;
}
.movie-rating .average{
  margin-left: 10rpx;
  font-size: 12px;
}

/* movie列表 */
.movie-items{
  padding: 10rpx 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
}
.movie-item{
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}
.movie-item image{
  width: 220rpx;
  height: 300rpx;
}
.movie-item .movie-item-title{
  font-size: 12px;
  text-align: left;
  white-space: nowrap;
  overflow: hidden;
  width: 220rpx;
  text-overflow: ellipsis;
}
/* loading */
.loading{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.loading image{
  width: 40rpx;
  height: 40rpx;
  animation: loading 1s infinite linear;
}
@keyframes loading{
  from{
    transform: rotate(0deg)
  }
  to{
    transform: rotate(360deg)
  }
}
.loading text{
  font-size: 12px;
  margin-left: 10rpx;
  color: #aaa;
}